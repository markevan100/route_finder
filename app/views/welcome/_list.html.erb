<table class="table table-striped">
  <thead>
    <tr>
      <th>Favorites</th>
    </tr>
  </thead>
  <tbody>
    <% @user_routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td class="deleteButton"><%= link_to "Delete this route", user_route_path(route),
                      method: :delete,
                      class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-danger" name="button" onclick="toggleStyle()">Delete a route</button>
